# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "ipv6"
order += "disk /"
order += "disk /media/ext_drive"
#order += "run_watch DHCP"
#order += "run_watch VPN"
#order += "wireless _first_"
order += "ethernet net0"
order += "ethernet tap0"
#order += "battery 0"
order += "load"
order += "cpu_usage"
order += "tztime local"

disk "/" {
  format = " %free"
}
disk "/media/ext_drive" {
  format = " %free"
}

wireless _first_ {
        format_up = " (%quality at %essid) %ip"
        format_down = " down"
}

ethernet net0 {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip"
        format_down = " down"
}
ethernet tap0 {
        # if you use %speed, i3status requires root privileges
        format_up = "F: %ip"
        format_down = "F: down"
}

battery 0 {
        format = " %status %percentage %remaining"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = " %Y-%m-%d %H:%M:%S"
}

load {
        format = " %1min"
}
cpu_usage {
        format = "%usage"
}

